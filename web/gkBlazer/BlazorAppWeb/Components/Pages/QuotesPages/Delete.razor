@page "/quotes/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorAppWeb.Models
@inject IDbContextFactory<BlazorAppWeb.Data.BlazorAppWebQuotesContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Quotes</h2>
    <hr />
    @if (quotes is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Author</dt>
            <dd class="col-sm-10">@quotes.Author</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Quote</dt>
            <dd class="col-sm-10">@quotes.Quote</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastUsedDate</dt>
            <dd class="col-sm-10">@quotes.LastUsedDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Count</dt>
            <dd class="col-sm-10">@quotes.Count</dd>
        </dl>
        <EditForm method="post" Model="quotes" OnValidSubmit="DeleteQuotes" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(quotes is null)">Delete</button> |
            <a href="/quotes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Quotes? quotes;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        quotes = await context.Quotes.FirstOrDefaultAsync(m => m.Id == Id);

        if (quotes is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteQuotes()
    {
        using var context = DbFactory.CreateDbContext();
        context.Quotes.Remove(quotes!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/quotes");
    }
}
